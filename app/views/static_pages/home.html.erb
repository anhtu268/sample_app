<%= provide :title, t(".page_title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".h3" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".page_title" %></h1>
    <h2>
      <%= t ".h2_1" %>
      <%= link_to t(".a_1"), Settings.rails_tut.home %>
      <%= t ".h2_2" %>
    </h2>
    <%= link_to t(".sign_up_but"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag(Settings.img.rails_logo, alt: t(".rails_logo_alt")),
    Settings.rails_web.home %>
<% end %>
