<%= provide :title, t(".page_title") %>
<h1><%= t ".page_title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, t(".form_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t(".form_pwd") %>
      <%= link_to t(".form_forgot"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".form_rem" %></span>
      <% end %>

      <%= f.submit t(".form_submit"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t ".p_1" %> <%= link_to t(".a_1"), signup_path %></p>
  </div>
</div>
